<Window x:Class="NewForm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewForm"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button 
            Grid.Column="1" 
            Grid.Row="1"
            x:Name="circleBTN"
            Click="circleBTN_Click"
            FontSize="20">Нажмите, чтобы посчитать площадь круга</Button>
        <Button 
            Grid.Column="1"
            Grid.Row="3"
            x:Name="squareBTN"
            Click="squareBTN_Click"
            FontSize="20">Нажмите, чтобы посчитать площадь квадрата</Button>
    </Grid>
</Window>
